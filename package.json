    "@microsoft/api-extractor": "^7.48.1",
    "@neondatabase/serverless": "file:dist/npm",
    "@prisma/adapter-neon": "^6.2.1",
    "@prisma/client": "^6.2.1",
    "@types/events": "^3.0.0",
    "@types/pg": "^8.6.5",
    "@types/ws": "^8.5.4",
    "@vercel/edge": "^1.2.1",
    "@vercel/sdk": "^1.2.2",
    "@vitest/browser": "^2.1.8",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.38.3",
    "esbuild": "^0.24.0",
    "fast-equals": "^5.0.1",
    "node-fetch": "^3.3.2",
    "playwright": "^1.49.1",
    "prisma": "^6.2.1",
    "subtls": "^0.4.6",
    "typescript": "^5.0.4",
    "vitest": "^2.1.8",
    "wrangler": "^3.0.1"
  },
  "prisma": {
    "schema": "tests/packages/prisma/schema.prisma"
  }
